<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextAppearance.FloatingLabelView" parent="android:TextAppearance.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.FloatingLabelView" parent="">
        <item name="android:textAppearance">@style/TextAppearance.FloatingLabelView</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="flv_trigger">focus</item>
        <item name="flv_colorDefault">?android:textColorSecondary</item>
        <item name="flv_colorActivated">?android:textColorPrimary</item>
        <item name="flv_colorError">@color/flv_error</item>
        <item name="flv_ownerViewBackgroundError">@null</item>
        <item name="flv_ownerViewUseColorError">true</item>
        <item name="flv_ownerViewPosition">bottom</item>
    </style>

    <style name="Widget.FloatingLabelView.Helper">
        <item name="flv_trigger">manual</item>
        <item name="flv_ownerViewPosition">top</item>
    </style>

    <style name="Widget.FloatingLabelView.Helper.Custom">
        <item name="flv_ownerViewUseColorError">false</item>
    </style>

    <style name="Widget.FloatingLabelView.CharacterCounter" parent="Widget.FloatingLabelView.Helper">
        <item name="android:gravity">end</item>
        <item name="flv_trigger">text</item>
    </style>

    <style name="Widget.FloatingLabelView.CharacterCounter.Inline">
        <item name="flv_ownerViewPosition">undefined</item>
    </style>
</resources>

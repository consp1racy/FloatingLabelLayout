<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#1976d2</item>
        <item name="colorPrimaryDark">#1565c0</item>
        <item name="colorAccent">#0d47a1</item>

        <item name="floatingLabelViewStyle">@style/Widget.AppTheme.FloatingLabelView</item>
        <item name="floatingHelperViewStyle">@style/Widget.AppTheme.FloatingLabelView</item>
        <item name="characterCounterViewStyle">@style/Widget.AppTheme.FloatingLabelView</item>
    </style>

    <style name="Widget.AppTheme.FloatingLabelView" parent="Widget.FloatingLabelView">
        <item name="flv_colorActivated">?colorControlActivated</item>
        <item name="flv_colorDefault">?colorControlNormal</item>
        <item name="flv_ownerViewBackgroundError">@drawable/abc_textfield_activated_mtrl_alpha</item>
        <item name="flv_ownerViewUseColorError">true</item>
    </style>

</resources>
